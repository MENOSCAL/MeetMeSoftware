    <body>   
      <div class="form">
          <div id="logo_container">
          <img src="{{asset('bundles/meetme/img/meetme_logo_long.png')}}" alt="">
        </div>  
      <div class="header"><h2>Sign In</h2></div>
      <div class="login">
        <form id="signupform" name ="signupform" action="{{path('meetme_signup')}}" method="POST">
          <ul>
            <li>
              <input type="text" name="name" required class="text_half" placeholder="First Name"/>
              <input type="text" name="lastname" required class="text_half half_right_input" placeholder="Last Name"/>
            </li>
            <li>
              <input type="text" name="username" required class="text_half" placeholder="User Name"/>
              <div class="selector_a">
                
                  
                 <select  name="namecbxcountry" class="text_half half_right_input"  required>
                     <option selected disabled>Select Country</option>
                            {% for country in countries %}
                             <option value="{{country.id}}">{{country.name}}</option>
                            {% endfor %}
                    </select>
                
              </div> 

            </li>
            <li>
              <input type="email" name="email" required class="text" placeholder="Email"/>
            </li>
            <li>
              <input type="password" id="newPassword" name="password" required class="text_half" placeholder="Password"/>
              <input type="password" id="confirmPassword" name="password2" required class="text_half half_right_input" placeholder="Confirm Password"/>
            </li>
            <div class="registrationFormAlert" id="checkPasswordMatch"></div>
            <li>
              <input type="submit" value="REGISTER" class="btn">
            </li>
            
          </ul>
        </form> 
        
      </div><br/>
      <div class="sign">
        <div class="up">
          <a class="go_back_btn" type="submit" href="{{path('meetme_login')}}"><i class="fa fa-chevron-left"></i> Go Back</a>
        </div>
      </div>
    </div>

