</div>       
-->                
              <div class="footer bg-gray">    
                    <button type="submit" style="background-color:#FF9900;"class="btn btn-block">Sign Up</button>
              </div>  
               <div class="footer bg-gray">
                    <a href="{{path('meetme_login')}}" class="text-center">Go back</a>
               </div>
            </form>
        </div>


        <!-- jQuery 2.0.2 -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="{{asset('bundles/meetme/js/bootstrap.min.js')}}" type="text/javascript"></script>
        <script src="{{asset('bundles/meetme/js/validate.js')}}" type="text/javascript"></script>
    </body>
</html>
