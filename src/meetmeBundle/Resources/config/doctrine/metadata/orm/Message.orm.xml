<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Message" table="message">
    <indexes>
      <index name="fk_sender" columns="idsender"/>
      <index name="fk_receiver" columns="idreceiver"/>
      <index name="fk_invitedperson" columns="idinvitedperson"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="subject" type="string" column="subject" length="50" nullable="true"/>
    <field name="message" type="string" column="message" length="400" nullable="true"/>
    <field name="dateSent" type="string" column="date_sent" length="20" nullable="true"/>
    <many-to-one field="idsender" target-entity="User">
      <join-columns>
        <join-column name="idsender" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idreceiver" target-entity="User">
      <join-columns>
        <join-column name="idreceiver" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idinvitedperson" target-entity="InvitedPerson">
      <join-columns>
        <join-column name="idinvitedperson" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
